<form method="get" action="/quizes/<%= quiz.id %>/answer">
  Tema: <%= quiz.tema %> <p>        
  Pregunta: <%= quiz.pregunta %> <p>
  <input type="text" name="respuesta" value="Respuesta"/>
  <input type="submit" value="Enviar">
</form>


<p><a href="/quizes/<%= quiz.id %>/comments/new"><button>Nuevo comentario</button></a></p>

<p class="comment"><strong>Comentarios:</strong></p>
<%for(var index in quiz.comments){%>
	<%if(quiz.comments[index].publicado || session.user){%>
		<p class="comment">- <%=quiz.comments[index].texto%>
			<%if(session.user && !quiz.comments[index].publicado){%>
				<a href="/quizes/<%= quiz.id %>/comments/<%=quiz.comments[index].id%>/publish"><button class="comment_btn" >Publicar</button></a>
			<%}%>
		</p>
	<%}%>
<%}%>